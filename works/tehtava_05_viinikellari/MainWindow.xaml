<Window x:Class="tehtava_05_viinikellari.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tehtava_05_viinikellari"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Resources>
            <XmlDataProvider x:Key="WineData" Source="Z:\windows-ohjelmointi\IIO11300Vktehtavat\tehtava_05_viinikellari\Viinit1.xml" XPath="/Viinikellari/Wine" />
        </Grid.Resources>
        <DataGrid Name="dgViinit" DataContext="{StaticResource WineData}" ItemsSource="{Binding XPath=/viinikellari/Wine}" AutoGeneratedColumns="False" SelectionChanged="dgViinit_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nimi" Binding="{Binding XPath=nimi}" />
                <DataGridTextColumn Header="Maa" Binding="{Binding XPath=maa}" />
                <DataGridTextColumn Header="Arvio" Binding="{Binding XPath=arvio}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
